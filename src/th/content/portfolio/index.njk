<div class="shadow">
    <div class="default-container py-24 px-6 ">
        <h2 class="uppercase text-primary-800 text-sm mb-2">Our Works</h2>
        <p class="font-bold text-3xl md:text-4xl mb-16 md:w-1/2">
            Our works in web design and development
        </p>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for project in collections.portfolio | filter('locale', lang) %}
                <div>
                    <div class="relative group">
                        <div class="mb-4 h-[250px] [&_img]:h-full [&_img]:object-cover [&_img]:object-center">
                            {% image eleventy.env.root + '/src' + project.data.image, project.data.imageAlt, "600px" %}
                        </div>
                        <div>
                            <p class="mb-2 font-bold text-lg group-hover:underline">
                                {{ project.data.name }}
                            </p>
                            <p class="text-gray-600">
                                {{ project.data.description }}
                            </p>
                        </div>
                        <a href="{{ project.url }}" class="absolute inset-0" aria-label="{{ project.data.name }}"></a>
                    </div>
                    <div class="mt-4">
                        {% if project.data.liveUrl %}
                            <a
                                href="https://{{ project.data.liveUrl }}"
                                class="text-primary-800 hover:text-primary-600 hover:underline"
                                target="_blank">
                                {{ project.data.liveUrl }}
                            </a>
                        {% elif project.data.portfolioUrl %}
                            <a href="{{ portfolioBaseUrl + project.data.portfolioUrl + "/index.html" }}" class="text-primary-800 hover:text-primary-600 hover:underline" target="_blank">
                                {{ project.data.portfolioUrl }}
                            </a>
                        {% endif %}
                        <i class="fal fa-external-link text-xs ml-2"></i>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
