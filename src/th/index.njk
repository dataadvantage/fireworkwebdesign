<!-- Portfolio -->
<div class="bg-white py-20 md:py-24 px-6">
  <div class="default-container lg:px-0">
    <div class="grid md:grid-cols-3 lg:grid-cols-4 gap-8 mb-12">
      <div class="border-r-primary-800 border-2 border-transparent md:col-span-2 md:col-start-3 pr-4">
        <h2 class="uppercase text-right text-primary-800 text-sm mb-2 font-noto">ผลงานของเรา</h2>
        <p class="text-3xl md:text-4xl text-right font-noto font-medium">
          ชมผลงานล่าสุดของเรา
        </p>
      </div>
    </div>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-10" data-aos="fade-up" data-aos-offset="300">
      {% for project in collections.portfolio | filter("featured", true) | filter("lang", lang) | reverse | head(3) %}
        <div>
          <div class="relative group">
            <div class="mb-4 h-[250px] [&_img]:h-full [&_img]:object-cover [&_img]:object-center shadow-sm">
              <img src="{{ project.data.image }}" alt="{{ project.data.imageAlt }}" width="600"/>
            </div>
            <div class="mb-4 flex flex-wrap gap-2 font-light">
              {% for s in project.data.tagged %}
                <span class="{{ s.style }} px-2 py-1 rounded-full text-xs">
                  {{ s.title }}
                </span>
              {% endfor %}
            </div>
            <div>
              <p class="font-bold text-lg group-hover:underline">
                {{ project.data.name }}
              </p>
            </div>
            <a href="{{ project.url }}" class="absolute inset-0" aria-label="{{ project.data.name }}"></a>
          </div>
          <div class="mt-2">
            {% if project.data.liveUrl %}
              <a
                href="https://{{ project.data.liveUrl }}"
                class="text-primary-800 hover:text-primary-600 hover:underline"
                target="_blank">
                {{ project.data.liveUrl }}
              </a>
            {% elif project.data.portfolioUrl %}
              <a href="{{ portfolioBaseUrl + project.data.portfolioUrl + "/index.html" }}" class="text-primary-800 hover:text-primary-600 hover:underline" target="_blank">
                {{ project.data.portfolioUrl }}
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
