<script>
  let deg = 360;
  let grayScale = 0;
  let times = 0;
  const spinButton = document.querySelector('#portrait-container i');
  const image = document.querySelector('#portrait-container img');
  const spinMeText = document.querySelector('#spin-me-text');
  spinButton.addEventListener('click', () => {
    times += 1
    deg *= 2;
    grayScale += 10
    image.style.transform = `rotate(${deg}deg)`;
    image.style.filter = `grayscale(${grayScale}%)`;
    if (times >= 5) {
      spinMeText.innerHTML = '<a href="/                            {{ lang }}/contact-us/" class="text-xs text-gray-500 text-primary-600 underline">Get in touch</a> so I can feed my 4 cats';
      spinMeText.classList.remove('opacity-0')
    } else {
      spinMeText.textContent = ('You have spun me ' + times + ' times');
    }
  });
</script>