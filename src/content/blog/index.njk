override:tags: false
permalink: /blogs/index.html
---

<div class="bg-amber-50/25 shadow">
    <div class="max-w-4xl mx-auto py-24 px-6 ">
        <h1 class="mb-12">Blog posts</h1>
        {% for blog in collections.blog %}
            <div class="relative group py-6">
                <p class="mb-4 font-bold text-xl group-hover:underline">
                    {{ blog.data.title }}
                </p>
                <p class="text-gray-600 group-hover:underline">
                    {{ blog.data.description }}
                </p>
                <a href="{{ blog.url }}" class="absolute inset-0"></a>
            </div>
        {% endfor %}
    </div>
</div>