<footer id="cs-footer-272" class="{% if lang == 'th' %}font-noto{% endif %}">
    <div
        class="default-container md:flex px-4">
        <!-- Logo Group -->
        <div class="flex-1 mb-6">
            <p class="uppercase inline-block mb-4 font-bold tracking-widest">
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-orange-500 to-orange-700">Firework</span><br/>
                <span class="font-light text-primary-800">Web Design</span>
            </p>
            <p>
                Ready to spark your next project?<br/>
                <a href="/{{ lang }}/contact-us/" class="text-blue-700 hover:underline">Contact us</a>
                today for a free consultation.
            </p>
        </div>
        <!-- Links -->
        <div class="md:flex md:gap-8 lg:gap-16">
            <ul class="mb-6">
                <li class="cs-nav-li">
                    <span class="cs-header">Quick links</span>
                </li>
                {% for item in collections.all | eleventyNavigation | filter("locale", locale) %}
                    <li class="cs-nav-li">
                        <a class="cs-nav-link" href="{{ item.url }}">{{ item.key }}</a>
                    </li>
                {% endfor %}
            </ul>
            <ul class="mb-6">
                <li class="cs-nav-li">
                    <span class="cs-header">Contact</span>
                </li>
                <li class="cs-contact-li pb-4">
                    Data Advantage Co.,Ltd.
                </li>
                <li class="cs-contact-li">
                    <a class="cs-contact-link" href="tel: {{ contacts.phone[0] }}">{{ contacts.phone[1] }}</a>
                </li>
                <li class="cs-contact-li">
                    <a class="cs-contact-link" href="mailto:{{ contacts.email }}">{{ contacts.email }}</a>
                </li>
            </ul>
        </div>
    </div>
</footer>