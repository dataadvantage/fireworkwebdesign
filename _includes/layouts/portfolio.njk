---
layout: layouts/base.njk
eleventyComputed:
    facebook_image: "{% getImage eleventy.env.root + '/src' + image, '900px' %}"
---

<div class="bg-amber-50/30 shadow-sm px-6 py-10 lg:py-16">
  <div class="">
    <div class="max-w-prose mx-auto ">
      <a href="/{{ lang }}" class="hover:underline no-underline text-gray-500 text-sm">HOME</a>
      /
      <a href="/{{ lang }}/portfolio/" class="no-underline hover:underline text-primary-800 text-sm">PORTFOLIO</a>
      <h1 class="mb-4">{{ name }}</h1>
      <div class="mb-4 flex flex-wrap font-light gap-2">
        {% for s in tagged %}
          <span class="{{ s.style }} px-2 py-1 rounded-full text-xs">
            {{ s.title }}
          </span>
        {% endfor %}
      </div>
    </div>
    <div class="max-w-5xl mx-auto prose">
      <div class="[&_img]:mx-auto">
        <img src="{{ image }}" alt="{{ imageAlt }}" eleventy:widths="600,1200" loading="lazy"/>
      </div>
      <div class="mt-4 max-w-prose mx-auto mb-4">
        {% if liveUrl %}
          <a
            href="https://{{ liveUrl }}"
            class="font-light text-primary-400 hover:text-primary-500 hover:underline text-sm no-underline"
            target="_blank">
            {{ liveUrl }}
          </a>
        {% elif portfolioUrl %}
          <a href="{{ portfolioBaseUrl + portfolioUrl + "/index.html" }}" class="font-light text-gray-400 hover:text-gray-500 hover:underline text-sm no-underline" target="_blank">
            View this project
          </a>
        {% endif %}
      </div>
      <div class="prose mx-auto prose-headings:text-primary-800 prose-strong:text-primary-800 [&_img]:shadow-sm">
        {{ content | safe }}
      </div>
    </div>
  </div>
  <div class="grid md:grid-cols-2 gap-6">
    {% for image in images %}
      <img src="{{ image.src }}" alt="{{ image.alt }}" width="1000"/>
    {% endfor %}
  </div>
  <div x-data="{mode: 'pc'}" class="mt-8">
    <div class="flex justify-center gap-4 [&_button]:hover:cursor-pointer max-sm:hidden">
      <button @click="mode = 'mobile'">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-6">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M10.5 1.5H8.25A2.25 2.25 0 0 0 6 3.75v16.5a2.25 2.25 0 0 0 2.25 2.25h7.5A2.25 2.25 0 0 0 18 20.25V3.75a2.25 2.25 0 0
              0-2.25-2.25H13.5m-3 0V3h3V1.5m-3 0h3m-3 18.75h3"/>
        </svg>
      </button>
      <button @click="mode = 'tablet'">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-6">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M10.5 19.5h3m-6.75 2.25h10.5a2.25 2.25 0 0 0 2.25-2.25v-15a2.25 2.25 0 0 0-2.25-2.25H6.75A2.25 2.25 0 0 0 4.5
              4.5v15a2.25 2.25 0 0 0 2.25 2.25Z"/>
        </svg>
      </button>
      <button @click="mode = 'pc'">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-6">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M9 17.25v1.007a3 3 0 0 1-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0 1 15 18.257V17.25m6-12V15a2.25 2.25 0 0 1-2.25
              2.25H5.25A2.25 2.25 0 0 1 3 15V5.25m18 0A2.25 2.25 0 0 0 18.75 3H5.25A2.25 2.25 0 0 0 3 5.25m18 0V12a2.25 2.25 0 0 1-2.25
              2.25H5.25A2.25 2.25 0 0 1 3 12V5.25"/>
        </svg>
      </button>
    </div>
    <iframe src="{{ portfolioBaseUrl + portfolioUrl + "/index.html" }}" class="w-full h-[800px] border border-gray-200 rounded-lg shadow-sm mt-4 mx-auto" :class="mode == 'mobile' ? 'max-w-[400px]' : (mode == 'tablet' ? 'max-w-[768px]' : 'max-w-[1400px]')"></iframe>
  </div>
</div>