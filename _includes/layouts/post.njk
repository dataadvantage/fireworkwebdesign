---
layout: layouts/base.njk
eleventyComputed:
    facebook_image: "{% getImage eleventy.env.root + '/src' + image, '900px' %}"
---

<div class="py-10 sm:py-24 px-4 md:px-6 bg-amber-50/40">
    <div class="prose max-w-3xl mx-auto prose-headings:text-primary-800 prose-strong:text-primary-800 [&_img]:shadow-sm
            [&_.header-anchor]:text-orange-200 prose-h1:max-sm:text-3xl prose-h1:border-l-4 prose-h1:pl-2 prose-h1:border-orange-600
            prose-h2:border-l-4 prose-h2:pl-2 prose-h2:border-orange-600 prose-li:my-0">
        <div class="mb-2">
            <a href='{{ "/blogs" | locale_url }}'>Blogs</a>
            / {{ title }}
        </div>
        {{ content | safe }}
    </div>
</div>
<div class="group bg-sky-950 flex flex-wrap items-center relative">
    <div class="[&_img]:grayscale [&_img]:group-hover:grayscale-0 **:transition md:w-[40%] bg-yellow-50 self-stretch
            [&_img]:h-full [&_img]:object-cover [&_img]:duration-500">
        <img src='/static/img/firework-1.jpg' alt='' eleventy:widths='960,1920'/>
    </div>
    <div class="pt-24 pb-28 px-8 md:px-16 lg:px-32 md:flex-1 relative">
        <p class="uppercase text-orange-600 mb-2 text-sm md:text-base font-semibold">
            {% if lang == 'en' %}
                Ready to get started?
            {% elif lang == 'th' %}
                อยากเริ่มต้นทำเว็บไซต์
            {% endif %}
        </p>
        <p class="font-semibold text-3xl lg:text-4xl text-white mb-6">
            {% if lang == 'en' %}
                Build the website you always wanted
            {% elif lang == 'th' %}
                สร้างเว็บไซต์ในแบบที่คุณต้องการ
            {% endif %}
        </p>
        <a
            class="inline-block btn-primary-lg bg-orange-600 hover:bg-orange-700 text-white hover:text-gray-200 uppercase"
            href="/{{ lang|lower }}/contact-us/">
            {% if lang == 'en' %}
                Get started today
            {% elif lang == 'th' %}
                เริ่มต้นทันที
            {% endif %}
        </a>
        <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewbox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-64 right-4 lg:right-32 top-8 stroke-sky-900/15 absolute">
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M9.813 15.904 9 18.75l-.813-2.846a4.5 4.5 0 0 0-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 0 0 3.09-3.09L9 5.25l.813
                    2.846a4.5 4.5 0 0 0 3.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 0 0-3.09 3.09ZM18.259 8.715 18 9.75l-.259-1.035a3.375 3.375 0
                    0 0-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 0 0 2.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 0 0 2.456 2.456L21.75
                    6l-1.035.259a3.375 3.375 0 0 0-2.456 2.456ZM16.894 20.567 16.5 21.75l-.394-1.183a2.25 2.25 0 0 0-1.423-1.423L13.5
                    18.75l1.183-.394a2.25 2.25 0 0 0 1.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 0 0 1.423 1.423l1.183.394-1.183.394a2.25
